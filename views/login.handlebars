{{#unless logged_in}}
<h3>Login</h3>
  <div class="input-group mb-3">
  <div class="input-group-prepend">
    <span class="input-group-text" id="username">Username</span>
  </div>
  <input type="text" id= 'username-input' class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
</div>
<div class="input-group mb-3">
<div class="input-group-prepend">
  <span class="input-group-text" id="password">Password</span>
</div>
<input type="text" id= 'password-input' class="form-control" placeholder="password" aria-label="password" aria-describedby="basic-addon1">
</div>
<input class="btn btn-primary login-btn" type="submit" value="Submit">

{{/unless}}

<script src="/js/login.js"></script>